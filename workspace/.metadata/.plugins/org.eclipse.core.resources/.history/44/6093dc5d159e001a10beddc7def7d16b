package lescodesdeabdou;

import java.util.Scanner;


public class main12 {

	public static void main(String[] args) {
		System.out.println(" Veuillez saisir un entier ");
		Scanner entier1 = new Scanner (System.in);
		
		int entier = entier1.nextInt();
		
		int div = entier/2;
		int som = 0 ;
		int i = 1;
		 while (i <= div ) {
			 
			  if ( entier % i == 0) {
				 
				 som = som +i ;
			  }
			  i = i++;
		 
	       if (som == entier) {
		      System.out.println(entier  + " est un nombre parfait");
	         }
	   
		 }
	}
}
