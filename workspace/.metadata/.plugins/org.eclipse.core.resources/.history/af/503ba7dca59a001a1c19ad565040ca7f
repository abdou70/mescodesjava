import java.util.Scanner;


public class main {

	public static void main(String[] args) {
		Scanner nombre = new Scanner(system.in);
		
		int r = 0;
		System.out.print("veuiller le rayon de votre cercle : ");
		
		r = nombre.nextInt();
		int surf ;
		int peri ;
		surf = r*r ;
		peri = 2*3*r;
		
		System.out.print("la surface du cercle est :" + surf + " est le perimetre du cercle est " + peri);
				

	}

}
